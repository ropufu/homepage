<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ropufu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ropufu.css" asp-append-version="true" />
    @*<link rel="stylesheet" href="~/Ropufu.Homepage.styles.css" asp-append-version="true" />*@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Home</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Calculator">Calculator</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Links">Links</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Contact">Contact</a>
                        </li>
                        @*<li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="xavierDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @@Xavier
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="xavierDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-page="/Xavier/Courses/Index">Courses</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Xavier/Faculty">Faculty</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Xavier/Hiring">Hiring Committee</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Xavier/Index">Xavier and I</a></li>
                            </ul>
                        </li>*@
                    </ul>
                    <form class="d-flex visually-hidden" id="navbar-form">
                        <input class="form-control me-2" id="navbar-search" type="search" placeholder="Search" aria-label="Search">
                    </form>
                    @*<partial name="_LoginPartial" />*@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Ropufu - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
